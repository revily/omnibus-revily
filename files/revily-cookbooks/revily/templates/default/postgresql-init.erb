#!/bin/sh

#
# make postgresql stop/restart send sigint to terminate clients to postgresql
# immediately.
#

RETVAL=0

case "$1" in
  stop|force-stop)
    /opt/revily/embedded/bin/sv once postgresql
    /opt/revily/embedded/bin/sv interrupt postgresql
    RETVAL=$?
    ;;
  restart)
    /opt/revily/embedded/bin/sv once postgresql
    /opt/revily/embedded/bin/sv interrupt postgresql
    sleep 5
    /opt/revily/embedded/bin/sv start postgresql
    RETVAL=$?
    ;;
	*)
		/opt/revily/embedded/bin/sv $1 postgresql
    RETVAL=$?
esac

exit $RETVAL

